{
  "compilerOptions": {
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
     "module": "commonjs",
     "moduleResolution": "node",
     "pretty": true,
     "target": "es6",
     "outDir": "./dist",
     "rootDir": "./src",
     "baseUrl": "./src",
     "esModuleInterop": true,
     "skipLibCheck": true,
  },
  "include": [
     "src/**/*.ts"
  ],
  "exclude": [
     "node_modules"
  ]
}